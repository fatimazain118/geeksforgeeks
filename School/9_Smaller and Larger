class Solution{
public:	
	vector<int> getMoreAndLess(int arr[], int n, int x) {
	    // code here
	    
	  
	   
	    int count_for_smaller= 0;
	    int count_for_Larger = 0;
	    
	    for(int i=0; i<n; i++)
	        {
	            if(arr[i]<=x)
	            count_for_smaller++;
	            
	             if(arr[i]>=x)
	            count_for_Larger++;
	        }
	        
	        vector<int> vec = {count_for_smaller, count_for_Larger};
	        return vec;
	 }
};
